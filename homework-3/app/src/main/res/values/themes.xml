<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/carrot_main</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/carrot_main</item>
        <item name="colorControlActivated">@color/carrot_main</item>
    </style>
    
    <style name="MainTextColoredStyle">
        <item name="android:fontFamily">"@font/inter_bold"</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/carrot_main</item>
    </style>

    <style name="SubTextColoredStyle">
        <item name="android:fontFamily">"@font/inter_medium"</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/carrot_main</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:fontFamily">"@font/inter_bold"</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubTextStyle">
        <item name="android:fontFamily">"@font/inter_medium"</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:fontFamily">"@font/inter_bold"</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RetryButtonTextStyle">
        <item name="android:fontFamily">"@font/inter_medium"</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LogoTextStyle">
        <item name="android:fontFamily">"@font/inter_bold"</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>